{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist/esm",
    "tsBuildInfoFile": "dist/esm/.tsbuildinfo",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
