{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "src",
    "outDir": "dist/esm",
    "tsBuildInfoFile": "dist/esm/.tsbuildinfo",
    "skipLibCheck": true,
    "types": [
      "w3c-web-hid"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ],
  "references": [
    {
      "path": "../hdwallet-core/tsconfig.esm.json"
    },
    {
      "path": "../hdwallet-ledger/tsconfig.esm.json"
    }
  ]
}
