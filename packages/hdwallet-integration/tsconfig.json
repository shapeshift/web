{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "../..",
    "paths": {
      "@shapeshiftoss/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
