{
  "name": "@shapeshiftoss/logger",
  "version": "1.1.3",
  "description": "A simple JSON logger with no external dependencies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "dist",
    "src": "src"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && yarn run -T tsc --build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "dev": "yarn run -T tsc --build --watch"
  }
}
