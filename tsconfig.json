{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "noEmit": true,

    /* Type Checking */
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noImplicitReturns": false,

    /* Module Resolution Options */
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@shapeshiftoss/hdwallet-core/wallet": ["packages/hdwallet-core/src/wallet"],
      "@shapeshiftoss/hdwallet-core/keyring": ["packages/hdwallet-core/src/keyring"],
      "@shapeshiftoss/hdwallet-core/event": ["packages/hdwallet-core/src/event"],
      "@shapeshiftoss/hdwallet-native/nativeEvents": ["packages/hdwallet-native/src/nativeEvents"],
      "@shapeshiftoss/hdwallet-native/crypto/revocable": ["packages/hdwallet-native/src/crypto/isolation/engines/default/revocable"],
      "@shapeshiftoss/*": ["packages/*/src"],
      "mswMock": ["packages/hdwallet-native/__mocks__/mswMock"],
      "untouchableMock": ["packages/hdwallet-native/__mocks__/untouchableMock"]
    },
    "resolveJsonModule": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    /* Language and Environment */
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "packages/**/*",
    "packages/**/*.json",
    "scripts/generateAssetData",
    "scripts/generateTradableThorAssetMap"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/__mocks__",
    "**/*.js",
    "packages/hdwallet-sandbox/**",
    "packages/hdwallet-integration/**",
    "src/lib/asset-service/service/encodedAssetData.json",
    "src/lib/asset-service/service/encodedRelatedAssetIndex.json"
  ],
  "references": [
    { "path": "./packages/caip" },
    { "path": "./packages/chain-adapters" },
    { "path": "./packages/contracts" },
    { "path": "./packages/errors" },
    { "path": "./packages/hdwallet-coinbase" },
    { "path": "./packages/hdwallet-core" },
    { "path": "./packages/hdwallet-gridplus" },
    { "path": "./packages/hdwallet-keepkey" },
    { "path": "./packages/hdwallet-keepkey-electron" },
    { "path": "./packages/hdwallet-keepkey-nodehid" },
    { "path": "./packages/hdwallet-keepkey-nodewebusb" },
    { "path": "./packages/hdwallet-keepkey-tcp" },
    { "path": "./packages/hdwallet-keepkey-webusb" },
    { "path": "./packages/hdwallet-keplr" },
    { "path": "./packages/hdwallet-ledger" },
    { "path": "./packages/hdwallet-ledger-webhid" },
    { "path": "./packages/hdwallet-ledger-webusb" },
    { "path": "./packages/hdwallet-metamask-multichain" },
    { "path": "./packages/hdwallet-native" },
    { "path": "./packages/hdwallet-native-vault" },
    { "path": "./packages/hdwallet-phantom" },
    { "path": "./packages/hdwallet-trezor" },
    { "path": "./packages/hdwallet-trezor-connect" },
    { "path": "./packages/hdwallet-vultisig" },
    { "path": "./packages/hdwallet-walletconnectv2" },
    { "path": "./packages/swapper" },
    { "path": "./packages/types" },
    { "path": "./packages/unchained-client" },
    { "path": "./packages/utils" }
  ]
}
