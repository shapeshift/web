{
  "name": "@shapeshiftoss/logger",
  "version": "1.0.3",
  "description": "A simple JSON logger with no external dependencies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "dist",
    "src": "src"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=8.11.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.json",
